{
    "compilerOptions": {
        "strict": true,
        "lib": ["es6"],
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }   
    },
    "include": ["**/*"],
    "exclude": ["dist"]
}